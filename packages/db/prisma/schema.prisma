generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(cuid())
  username  String  @unique
  email     String  @unique
  Account   Account @default(GOOGLE)
  profile   String?
  createdAt DateTime @default(now())
  Projects  Projects[]
}

model Projects {
  id        String  @id @default(cuid())
  name      String
  template  Templates
  user      User @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
}

enum Templates {
  NODE_JS
  NODE_JS_TYPESCRIPT
  REACT
  REACT_TYPESCRIPT
  CPP
  PYTHON
  PYTHON_DJANGO
  NEXT_JS
  NEXT_JS_TURBO
}

enum Account {
  GOOGLE
  GITHUB
}
